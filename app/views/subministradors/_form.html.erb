<%= simple_form_for([@edifici, @subministrador], remote: true) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :edifici_id, :as => :hidden, :input_html => { :value => @edifici.id } %>
    
    <div class="row">
      <div class="large-8 columns">
        <%= f.input :nom_subministrador %>
      </div>
      <div class="large-4 columns">
        <%= f.input :nif_subministrador %>
      </div>
    </div>

    <div class="row">
      <div class="large-12 columns">
        <%= f.input :adreca_subministrador %>
      </div>
    </div>

    <div class="row">
      <div class="large-6 columns">
        <%= f.input :cp_subministrador %>
      </div>
      <div class="large-6 columns">
        <%= f.input :poblacio_subministrador %>
      </div>
    </div>

    <div class="row">
      <div class="large-6 columns">
        <%= f.input :provincia_subministrador %>
      </div>
      <div class="large-6 columns">
        <%= f.input :pais_subministrador %>
      </div>
    </div>

    <div class="row">
      <div class="large-4 columns">
        <%= f.input :telefon %>
      </div>
      <div class="large-4 columns">
        <%= f.input :email %>
      </div>
      <div class="large-4 columns">
        <%= f.input :web %>
      </div>
    </div>
    
  </div>

  <div class="form-actions">
    <div class="row">
      <div class="large-12 columns">
        <%= f.button :submit, t('.guardar'), :class => 'button small radius right botodreta' %>
      </div>
    </div>
  </div>
<% end %>

