<%= simple_form_for([@edifici, @promotor], remote: true) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :edifici_id, :as => :hidden, :input_html => { :value => @edifici.id } %>
    
    <div class="row">
      <div class="large-8 columns">
        <%= f.input :nom_promotor %>
      </div>
      <div class="large-4 columns">
        <%= f.input :nif_promotor %>
      </div>
    </div>

    <div class="row">
      <div class="large-12 columns">
        <%= f.input :adreca_promotor %>
      </div>
    </div>

    <div class="row">
      <div class="large-6 columns">
        <%= f.input :cp_promotor %>
      </div>
      <div class="large-6 columns">
        <%= f.input :poblacio_promotor %>
      </div>
    </div>

    <div class="row">
      <div class="large-6 columns">
        <%= f.input :provincia_promotor %>
      </div>
      <div class="large-6 columns">
        <%= f.input :pais_promotor %>
      </div>
    </div>
    
  </div>

  <div class="form-actions">
    <div class="row">
      <div class="large-12 columns">
        <%= f.button :submit, t('.guardar'), :class => 'button radius' %>
      </div>
    </div>
  </div>
<% end %>

