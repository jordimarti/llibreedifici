<%= simple_form_for([@edifici, @energia_certificat], remote: true) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :edifici_id, :as => :hidden, :input_html => { :value => @edifici.id } %>
    
    <div class="row">
      <div class="large-5 columns">
        <%= f.input :numero_registre %>
      </div>
      <div class="large-4 columns">
        <%= f.input :vigencia %>
      </div>
      <div class="large-3 columns">
        <%= f.input :qualificacio_energetica %>
      </div>
    </div>
  </div>

  <div class="row">
      <div class="large-4 columns">
        <%= f.input :consum_energia_primaria %>
      </div>
      <div class="large-4 columns end">
        <%= f.input :emissions_co2 %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <div class="row">
      <div class="large-12 columns">
        <%= f.button :submit, t('.guardar'), :class => 'button small radius right botodreta' %>
      </div>
    </div>
  </div>

<% end %>
