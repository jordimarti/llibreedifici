<%= simple_form_for([@edifici, @entitat_control], remote: true) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :edifici_id, :as => :hidden, :input_html => { :value => @edifici.id } %>
    
    <div class="row">
      <div class="large-8 columns">
        <%= f.input :nom_entitat_control %>
      </div>
      <div class="large-4 columns">
        <%= f.input :nif_entitat_control %>
      </div>
    </div>

    <div class="row">
      <div class="large-12 columns">
        <%= f.input :adreca_entitat_control %>
      </div>
    </div>

    <div class="row">
      <div class="large-6 columns">
        <%= f.input :cp_entitat_control %>
      </div>
      <div class="large-6 columns">
        <%= f.input :poblacio_entitat_control %>
      </div>
    </div>

    <div class="row">
      <div class="large-6 columns">
        <%= f.input :provincia_entitat_control %>
      </div>
      <div class="large-6 columns">
        <%= f.input :pais_entitat_control %>
      </div>
    </div>
    
  </div>

  <div class="form-actions">
    <div class="row">
      <div class="large-12 columns">
        <%= f.button :submit, t('.guardar'), :class => 'button small radius right botodreta' %>
      </div>
    </div>
  </div>
<% end %>
