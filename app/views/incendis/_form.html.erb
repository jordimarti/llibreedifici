<%= simple_form_for([@edifici, @incendi]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :edifici_id, :as => :hidden, :input_html => { :value => @edifici.id } %>
    <div class="row">
      <div class="medium-12 columns">
        <div class="titol-sistema"><%= t('.titol_incendis') %></div>
      </div>
    </div>

    <% flash.each do |key, value| %>
      <div class="row">
        <div class="large-6 columns end">
          <div data-alert class="alert-box success radius">
            <%= value %>
            <a href="#" class="close">&times;</a>
          </div>
        </div>
      </div>
    <% end %>

    <div class="row">
      <div class="medium-12 columns">
        <div class="titol-subsistema"><%= t('.caracteristiques_generals') %></div>
        <div class="row">
          <div class="medium-6 columns">
            <%= f.input :alarma_automatica %>
            <%= f.input :alarma_manual %>
            <%= f.input :extintors %>
            <%= f.input :abastiment_aigua %>
          </div>
          <div class="medium-6 columns">
            <%= f.input :bie %>
            <%= f.input :hidrants %>
            <%= f.input :ruixadors %>
            <%= f.input :columnes_seques %>
          </div>
        </div>
      </div>
    </div>   

    <div class="row">
      <div class="medium-12 columns">
        <hr>
        <%= f.input :parallamps %>
      </div>
    </div>

  </div>

  <div class="row">
    <div class="medium-12 columns">
      <div class="form-actions">
        <%= f.button :submit, t('.guardar'), :class => 'button small radius right botodreta' %>
      </div>
    </div>
  </div>
<% end %>
