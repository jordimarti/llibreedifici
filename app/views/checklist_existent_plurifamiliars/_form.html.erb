<%= simple_form_for [@edifici, @checklist_existent_plurifamiliar] do |f| %>
  <%= f.error_notification %>
  <div class="row">
    <div class="medium-12 columns">
      <div class="container-document">
        <p><%= t('.text_arxiu') %>:</p>
        <br>
        <div class="form-inputs">
          <%= f.input :edifici_id, :as => :hidden, :input_html => { :value => @edifici.id } %>
          <div class="row">
            <div class="medium-6 columns">
              <%= f.input :iite %>
              <%= f.input :document_lliurament_iite %>
              <%= f.input :comunicat_ens_local %>
              <%= f.input :programa_rehabilitacio %>
              <%= f.input :certificat_final_obra %>
              <%= f.input :certificat_aptitud %>
              <%= f.input :certificacio_energetica %>
            </div>
            <div class="medium-6 columns">
              <%= f.input :documents_justificatius_operacions %>
              <%= f.input :pressupostos_obres %>
              <%= f.input :certificats_instalacions_comunes %>
              <% if @edifici.tipus_edifici == 'existent_plurifamiliar' %>
                <%= f.input :certificats_inspeccions_tecniques %>
              <% end %>
            </div>
          </div>
          
          
        </div>

        <div class="row">
          <div class="medium-12 columns">
            <div class="form-actions">
              <%= f.button :submit, t('.guardar'), :class => 'button small radius right botodreta' %>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
<% end %>
