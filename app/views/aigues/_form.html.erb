<%= simple_form_for([@edifici, @aigua]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :edifici_id, :as => :hidden, :input_html => { :value => @edifici.id } %>
    <div class="row">
      <div class="medium-12 columns">
        <div class="titol-sistema"><%= t('.titol_aigua') %></div>
      </div>
    </div>

    <div class="row">
      <div class="medium-12 columns">
        <div class="titol-subsistema"><%= t('.caracteristiques_generals') %></div>
        <%= f.input :connexio_directa %>
        <%= f.input :connexio_aforament %>
        <%= f.input :captacio_propia %>
        <%= f.input :grup_pressio %>
      </div>
    </div>

    <hr class="form-divider">

    <div class="row">
      <div class="medium-6 columns">
        <div class="titol-subsistema"><%= t('.comptadors') %></div>
        <div class="camps-subsistema">
          <%= f.input :comptador_unic %>
          <%= f.input :comptadors_individuals_habitatge %>
          <%= f.input :comptadors_individuals_centralitzats %>
        </div>
      </div>
      <div class="medium-6 columns">
        <div class="titol-subsistema"><%= t('.muntants') %></div>
        <div class="camps-subsistema">
          <%= f.input :muntants_plom %>
          <%= f.input :muntants_ferro %>
          <%= f.input :muntants_coure %>
          <%= f.input :muntants_plastic %>
        </div>
      </div>
    </div>

  <div class="row">
    <div class="medium-12 columns">
      <div class="form-actions">
        <%= f.button :submit, t('.guardar'), :class => 'button small radius right botodreta' %>
      </div>
    </div>
  </div>
<% end %>
