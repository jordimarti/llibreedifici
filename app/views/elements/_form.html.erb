<%= simple_form_for([@edifici, @element], remote: true) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :edifici_id, :as => :hidden, :input_html => { :value => @edifici.id } %>
    <%= f.input :sistema_element, :as => :hidden, :input_html => { :value => params[:sistema] } %>

    <div class="row">
    	<div class="medium-12 columns">
    		<%= f.input :nom_element %>
    	</div>
    </div>
  </div>

  <div class="form-actions">
    <div class="row">
      <div class="large-12 columns">
        <%= f.button :submit, t('.guardar'), :class => 'button small radius right botodreta' %>
      </div>
    </div>
  </div>
<% end %>
