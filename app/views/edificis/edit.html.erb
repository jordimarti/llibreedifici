<div class="projectes-background">
	<div class="row">
		<div class="medium-6 medium-offset-3 columns">
	    <div class="projectes-external-container">
	      <div class="projectes-title-container">
	        <span class="projectes-title"><%= t('.editar_edifici') %></span>
	      </div>
	      <div class="projectes-form-container">
	      	<%= simple_form_for(@edifici) do |f| %>

					  <div class="form-inputs">
					    <%= f.input :user_id, :as => :hidden, :input_html => { :value => current_user.id } %>
					    <%= f.input :nom_edifici %>
					    <% if @edifici.creador = 'cambra' %>
					    	<%= f.input :editor_nif %>
					    <% end %>
					  </div>
					  	
					  <div class="form-actions projectes-form-button">
					    <%= f.button :submit, t('.guardar'), :class => 'button small radius right botodreta' %>
					  </div>
					<% end %>
	      </div>
	    </div>
<p><%= t('.no_editar_tipologia') %></p>
<%= link_to t('.tornar_projectes'), edificis_path %>

</div>