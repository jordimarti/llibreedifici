<%= simple_form_for([@edifici, @signatura_llibre], remote: true) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :edifici_id, :as => :hidden, :input_html => { :value => @edifici.id } %>
    
    <div class="row">
      <div class="large-8 columns">
		    <%= f.input :autor_llibre_nom %>
		    <%= f.input :autor_llibre_titulacio %>
      </div>
    </div>

  </div>

  <div class="form-actions">
    <div class="row">
      <div class="large-12 columns">
        <%= f.button :submit, t('.guardar'), :class => 'button small radius right botodreta' %>
      </div>
    </div>
  </div>
<% end %>
