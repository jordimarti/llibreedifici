<%= simple_form_for([@edifici, @estructura]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :edifici_id, :as => :hidden, :input_html => { :value => @edifici.id } %>
    <div class="row">
      <div class="medium-12 columns">
        <div class="titol-sistema"><%= t('.titol_estructura') %></div>
      </div>
    </div>

    <div class="row">
      <div class="medium-12 columns">
        <div class="titol-grup-subsistema"><%= t('.estructura_vertical') %></div>
      </div>
    </div>
    <div class="row">
      <div class="medium-6 columns">
        <div class="titol-subsistema"><%= t('.parets_carrega') %></div>
        <div class="camps-subsistema">
          <%= f.input :parets_pedra %>
          <%= f.input :parets_formigo_armat %>
          <%= f.input :parets_tova %>
          <%= f.input :parets_tapia %>
          <%= f.input :parets_fabrica_mao %>
          <%= f.input :parets_bloc_ceramic %>
          <%= f.input :parets_bloc_formigo %>
          <%= f.input :parets_entramat_fusta %>
        </div>
      </div>
      <div class="medium-6 columns">
        <div class="titol-subsistema"><%= t('.pilars') %></div>
        <div class="camps-subsistema">
          <%= f.input :pilars_mao %>
          <%= f.input :pilars_ferro_colat %>
          <%= f.input :pilars_acer %>
          <%= f.input :pilars_formigo_armat %>
        </div>
      </div>
    </div>

    <hr class="form-divider">

    <div class="row">
      <div class="medium-12 columns">
        <div class="titol-grup-subsistema"><%= t('.estructura_horitzontal') %></div>
      </div>
    </div>
    <div class="row">
      <div class="medium-6 columns">
        <div class="titol-subsistema"><%= t('.estructura_principal') %></div>
        <div class="camps-subsistema">
          <%= f.input :jasseres_fusta %>
          <%= f.input :jasseres_fusta_laminada %>
          <%= f.input :jasseres_acer %>
          <%= f.input :jasseres_formigo_armat %>
          <%= f.input :jasseres_acer_formigo %>
        </div>
      </div>
      <div class="medium-6 columns">
        <div class="titol-subsistema"><%= t('.sostre') %></div>
        <div class="camps-subsistema">
          <%= f.input :forjat_fusta %>
          <%= f.input :forjat_metalic %>
          <%= f.input :forjat_formigo_armat %>
          <%= f.input :forjat_ceramica_armada %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="medium-6 columns">
        <div class="titol-subsistema"><%= t('.sostre_entrebigat') %></div>
        <div class="camps-subsistema">
          <%= f.input :entrebigat_taulell %>
          <%= f.input :entrebigat_revolto_ceramic %>
          <%= f.input :entrebigat_revolto_formigo %>
        </div>
      </div>
      <div class="medium-6 columns">
        <div class="titol-subsistema"><%= t('.altres') %></div>
        <div class="camps-subsistema">
          <%= f.input :forjat_reticular %>
          <%= f.input :llosa_formigo %>
          <%= f.input :forjat_sanitari %>
          <%= f.input :solera %>
        </div>
      </div>
    </div>

    <hr class="form-divider">

    <div class="row">
      <div class="medium-12 columns">
        <div class="titol-grup-subsistema"><%= t('.estructura_coberta') %></div>
      </div>
    </div>
    <div class="row">
      <div class="medium-6 columns">
        <div class="titol-subsistema"><%= t('.sostre_horitzontal') %></div>
        <div class="camps-subsistema">
          <%= f.input :forjat_horitzontal_coberta_capa_pendent %>
          <%= f.input :forjat_horitzontal_coberta_envanets %> 
        </div>
      </div>
      <div class="medium-6 columns">
        <div class="titol-subsistema"><%= t('.sostre_inclinat') %></div>
        <div class="camps-subsistema">
          <%= f.input :forjat_inclinat_coberta_formigo %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="medium-6 columns">
        <div class="titol-subsistema"><%= t('.encavallades') %></div>
        <div class="camps-subsistema">
          <%= f.input :encavallada_bigues_formigo %>
          <%= f.input :encavallada_bigues_metall %>
          <%= f.input :encavallada_bigues_fusta %>
        </div>
      </div>
      <div class="medium-6 columns">
        <div class="titol-subsistema"><%= t('.altres') %></div>
        <div class="camps-subsistema">
          <%= f.input :coberta_taulell_ceramic %>
          <%= f.input :coberta_taulell_fusta %>
          <%= f.input :coberta_sandwich %>
        </div>
      </div>
    </div>

    <hr class="form-divider">

    <div class="row">
      <div class="medium-12 columns">
        <div class="titol-grup-subsistema"><%= t('.estructura_escala') %></div>
        <div class="camps-subsistema">
          <%= f.input :escala_fusta %>
          <%= f.input :escala_acer %>
          <%= f.input :escala_ceramica %>
          <%= f.input :escala_llosa_armada %>
          <%= f.input :escala_biguetes_formigo_armat %>
        </div>
      </div>
    </div>
  

    <hr class="form-divider">

    <div class="row">
      <div class="medium-12 columns">
        <div class="titol-grup-subsistema"><%= t('.sobrecarregues') %></div>
      </div>
    </div>
    <div class="row">
      <div class="medium-6 columns">
        <div class="camps-subsistema">
          <%= f.input :sobrecarregues_habitatges %>
          <%= f.input :sobrecarregues_zones_comuns %>
          <%= f.input :sobrecarregues_locals %>
        </div>
      </div>
      <div class="medium-6 columns">
        <div class="camps-subsistema">
          <%= f.input :sobrecarregues_garatges %>
          <%= f.input :sobrecarregues_trasters %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="medium-12 columns">
      <div class="form-actions">
        <%= f.button :submit, t('.guardar'), :class => 'button small radius right botodreta' %>
      </div>
    </div>
  </div>
<% end %>
