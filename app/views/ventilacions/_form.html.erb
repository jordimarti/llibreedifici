<%= simple_form_for([@edifici, @ventilacio]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :edifici_id, :as => :hidden, :input_html => { :value => @edifici.id } %>
    <div class="row">
      <div class="medium-12 columns">
        <div class="titol-sistema"><%= t('.titol_ventilacions') %></div>
      </div>
    </div>

    <% flash.each do |key, value| %>
      <div class="row">
        <div class="large-6 columns end">
          <div data-alert class="alert-box success radius">
            <%= value %>
            <a href="#" class="close">&times;</a>
          </div>
        </div>
      </div>
    <% end %>

    <div class="row">
      <div class="medium-12 columns">
        <div class="titol-subsistema"><%= t('.habitatge') %></div>
        <div class="row">
          <div class="medium-6 columns">
            <%= f.input :habitatge_natural_conductes %>
            <%= f.input :habitatge_natural_obertures %>
          </div>
          <div class="medium-6 columns">
            <%= f.input :habitatge_mecanica_conductes %>
            <%= f.input :habitatge_mecanica_obertures %>
            <%= f.input :habitatge_mecanica_control %>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="medium-12 columns">
        <div class="titol-subsistema"><%= t('.traster') %></div>
        <div class="row">
          <div class="medium-6 columns">
            <%= f.input :traster_natural_conductes %>
            <%= f.input :traster_natural_obertures %>
          </div>
          <div class="medium-6 columns">      
            <%= f.input :traster_mecanica_conductes %>
            <%= f.input :traster_mecanica_obertures %>
            <%= f.input :traster_mecanica_control %>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="medium-12 columns">
        <div class="titol-subsistema"><%= t('.magatzem') %></div>
        <div class="row">
          <div class="medium-6 columns">
            <%= f.input :magatzem_natural_conductes %>
            <%= f.input :magatzem_natural_obertures %>
          </div>
          <div class="medium-6 columns">
            <%= f.input :magatzem_mecanica_conductes %>
            <%= f.input :magatzem_mecanica_obertures %>
            <%= f.input :magatzem_mecanica_control %>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="medium-12 columns">
        <div class="titol-subsistema"><%= t('.garatge') %></div>
        <div class="row">
          <div class="medium-6 columns">
            <%= f.input :garatge_natural_conductes %>
            <%= f.input :garatge_natural_obertures %>
          </div>
          <div class="medium-6 columns">
            <%= f.input :garatge_mecanica_conductes %>
            <%= f.input :garatge_mecanica_obertures %>
            <%= f.input :garatge_mecanica_control %>
          </div>
        </div>
      </div>
    </div>
  </div>
  

  <div class="row">
    <div class="medium-12 columns">
      <div class="form-actions">
        <%= f.button :submit, t('.guardar'), :class => 'button small radius right botodreta' %>
      </div>
    </div>
  </div>
<% end %>
