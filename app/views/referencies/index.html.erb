<div class="operacions-background">
  <div class="row">
    <div class="medium-12 columns">
      <div class="formulari-sistema">
        <table>
          <thead>
            <tr>
              <th>Descripció</th>
              <th>Periodicitat</th>
              <th>Referència</th>
              <th>Responsable</th>
            </tr>
          </thead>

          <tbody>
            <% @referencies.each do |referencia| %>
              <tr>
                <td><%= @operacions.find(referencia.operacio_id).descripcio_ca %></td>
                <td><%= @operacions.find(referencia.operacio_id).periodicitat_text_ca %></td>
                <td><%= @operacions.find(referencia.operacio_id).document_referencia %></td>
                <td><%= @operacions.find(referencia.operacio_id).responsable %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

      </div>
    </div>
  </div>
</div>





<br>
<p>Número operacions: <%= @operacions.count %></p>
<p>Número de referències: <%= @referencies.count %></p>

<%= link_to 'New Referencia', new_edifici_referencia_path %>
<%= link_to 'Crear llistat', crear_llistat_path %>

</div>
