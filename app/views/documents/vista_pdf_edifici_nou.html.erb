      <td><span class="titol-taula">Municipi:</span><br/><%= @edifici.identificacio.poblacio_edifici %></td>
      <td><span class="titol-taula">Província:</span><br/><%= @edifici.identificacio.provincia_edifici %></td>
    </tr>
 	</tbody>
</table>
