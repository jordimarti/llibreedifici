<% @edifici.garantia_promotors.each do |garantia_promotor| %>
	<div class="taula-container">
		<p class="titol-taula">GARANTIES DEL PROMOTOR:</p>
		<table class="taula-dades">
		  <tbody>
		    <tr>
		      <td class="taula-dos-columnes"><span class="titol-taula">Tipus:</span><br/><%= garantia_promotor.tipus %></td>
		      <td class="taula-dos-columnes"><span class="titol-taula">Data de venciment:</span><br/><%= garantia_promotor.venciment %></td>
		    </tr>
		  </tbody>
		</table>
		<table class="taula-dades">
		  <tbody>
		    <tr>
		      <td><span class="titol-taula">Referència de la pòlissa o altre document acreditatiu de l’atorgament de la garantia:</span><br/><%= garantia_promotor.referencia %></td>
		    </tr>
		  </tbody>
		</table>
		<div class="espaiador"></div>
	</div>
<% end %>

