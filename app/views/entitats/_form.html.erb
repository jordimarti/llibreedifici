<%= simple_form_for([@edifici, @entitat], remote: true) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :edifici_id, :as => :hidden, :input_html => { :value => @edifici.id } %>
    
    <div class="row">
      <div class="large-8 columns">
        <%= f.input :nom_entitat %>
      </div>
      <div class="large-4 columns">
        <%= f.input :superficie %>
      </div>
    </div>
    <div class="row">
      <div class="large-6 columns">
        <%= f.input :destinacio %>
      </div>
      <div class="large-6 columns">
        <%= f.input :quota %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <div class="row">
      <div class="large-12 columns">
        <%= f.button :submit, t('.guardar'), :class => 'button small radius right botodreta' %>
      </div>
    </div>
  </div>

<% end %>
