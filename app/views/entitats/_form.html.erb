<%= simple_form_for(@entitat) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :edifici_id %>
    <%= f.input :nom_entitat %>
    <%= f.input :superficie %>
    <%= f.input :destinacio %>
    <%= f.input :quota %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
