<% @entitats.order(nom_entitat: :asc).each do |entitat| %>
	<div class="dades-item">
		
		
	  <%= link_to edifici_entitat_path(@edifici, entitat), remote: true, method: :delete,  data: { confirm: 'Segur que vols eliminar?' } do %>
		  <div class="dades-eliminar right">
		  	<span class="icon-cancel icones-icomoon"></span>
		  </div>
		<% end %>
		<%= link_to edit_edifici_entitat_path(@edifici, entitat), remote: true do %>
	    <div class="dades-editar">
	    	<%= entitat.nom_entitat %>
	    </div>
	  <% end %>
	</div>
<% end %>