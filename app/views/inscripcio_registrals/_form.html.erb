<%= simple_form_for([@edifici, @inscripcio_registral], remote: true) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :edifici_id, :as => :hidden, :input_html => { :value => @edifici.id } %>
    
    <div class="row">
      <div class="medium-2 columns">
        <%= f.input :data %>
      </div>
      <div class="medium-2 columns">
        <%= f.input :tom %>
      </div>
      <div class="medium-2 columns">
        <%= f.input :foli %>
      </div>
      <div class="medium-2 columns">
        <%= f.input :llibre %>
      </div>
      <div class="medium-2 columns">
        <%= f.input :numero_finca %>
      </div>
      <div class="medium-2 columns">
        <%= f.input :registre %>
      </div>
    </div>
    
  </div>

  <div class="form-actions">
    <div class="row">
      <div class="medium-12 columns">
        <%= f.button :submit, t('.guardar'), :class => 'button small radius right botodreta' %>
      </div>
    </div>
  </div>
<% end %>

