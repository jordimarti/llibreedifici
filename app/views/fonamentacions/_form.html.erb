<%= simple_form_for([@edifici, @fonamentacio]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :edifici_id, :as => :hidden, :input_html => { :value => @edifici.id } %>
    <div class="row">
      <div class="medium-12 columns">
        <div class="titol-sistema"><%= t('.titol_fonamentacio') %></div>
      </div>
    </div>

    <% flash.each do |key, value| %>
      <div class="row">
        <div class="large-6 columns end">
          <div data-alert class="alert-box success radius">
            <%= value %>
            <a href="#" class="close">&times;</a>
          </div>
        </div>
      </div>
    <% end %>

    <div class="row">
      <div class="medium-4 columns">
        <div class="titol-subsistema"><%= t('.sistemes_contencio') %></div>
        <%= f.input :mur_pedra %>
        <%= f.input :mur_fabrica_mao %>
        <%= f.input :mur_fabrica_bloc %>
        <%= f.input :mur_formigo_armat %>
        <%= f.input :mur_pantalla %>
        <hr>
        <%= f.input :drenatge_perimetral %>
        <%= f.input :camera_aire %>
        <%= f.input :impermeabilitzacio_exterior %>
        <%= f.input :impermeabilitzacio_interior %>
      </div>
      <div class="medium-4 columns">
        <div class="titol-subsistema"><%= t('.fonamentacio_superficial') %></div>
        <%= f.input :sabates_aillades %>
        <%= f.input :sabates_continues %>
        <%= f.input :llosa %>
        <hr>
        <% if (@edifici.tipus_edifici == 'existent_plurifamiliar' || @edifici.tipus_edifici == 'existent_unifamiliar') %>
          <%= f.input :sabates_paredat %>
        <% end %>
        <%= f.input :formigo %>
        <%= f.input :formigo_armat %>
      </div>
      <div class="medium-4 columns">
        <div class="titol-subsistema"><%= t('.fonamentacio_profunda') %></div>
        <%= f.input :pilons %>
        <%= f.input :pantalles %>
      </div>
    </div>

    <div class="row">

    </div>
  </div>

  <div class="row">
    <div class="medium-12 columns">
      <div class="form-actions">
        <%= f.button :submit, t('.guardar'), :class => 'button small radius right botodreta' %>
      </div>
    </div>
  </div>
<% end %>
